<% content_for :body_content_title do %>
  <%= @team_member.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @team_member.name %>
    </p>
  </section>
  <section>
    <h1>Position</h1>
    <p>
      <%=raw @team_member.position %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @team_member.photo, nil %>
    </p>
  </section>
  <section>
    <h1>Blurb</h1>
    <p>
      <%=raw @team_member.blurb %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="team_members">
      <% @team_members.each do |team_member| %>
        <li>
          <%= link_to team_member.name, refinery.team_members_team_member_path(team_member) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
